---
const cases = [
  { id: 1, title: "Smile Makeover", category: "Veneers", before: "/images/before1.jpeg", after: "/images/after1.jpeg" },
  { id: 2, title: "Full Restoration", category: "Implants", before: "/images/before2.jpeg", after: "/images/after2.jpeg" },
  { id: 3, title: "Whitening Treatment", category: "Whitening", before: "/images/before3.jpeg", after: "/images/after3.jpeg" },
];
---

<section class="results" id="results">
  <div class="container">
    <div class="results-header">
      <span class="section-label reveal">Before & After</span>
      <h2 class="section-title reveal reveal-delay-1">Real Patients,<br/>Real Results</h2>
      <p class="section-subtitle reveal reveal-delay-2">
        See the transformations that our patients experience.
        Every smile tells a story of precision and care.
      </p>
    </div>

    <div class="results-grid">
      {cases.map((c, i) => (
        <div class={`result-card reveal reveal-delay-${i + 1}`}>
          <div class="result-image-container">
            <div class="result-slider">
              <div class="result-img-wrap result-before">
                <div class="result-label">Before</div>
                <img src={c.before} alt={`Before - ${c.title}`} class="result-img" loading="lazy" />
              </div>
              <div class="slider-divider">
                <div class="slider-handle">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><path d="M8 7l-4 5 4 5"/><path d="M16 7l4 5-4 5"/></svg>
                </div>
              </div>
              <div class="result-img-wrap result-after">
                <div class="result-label result-label-after">After</div>
                <img src={c.after} alt={`After - ${c.title}`} class="result-img" loading="lazy" />
              </div>
            </div>
          </div>
          <div class="result-info">
            <span class="result-category">{c.category}</span>
            <h3 class="result-title">{c.title}</h3>
          </div>
        </div>
      ))}
    </div>

    <div class="results-cta reveal">
      <div class="results-cta-content">
        <h3>Ready for Your Transformation?</h3>
        <p>Schedule a consultation to discuss your dream smile.</p>
      </div>
      <a href="#contact" class="btn btn-white">
        Get Started
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
      </a>
    </div>
  </div>
</section>

<style>
  .results {
    padding: var(--section-padding) 0;
    position: relative;
  }

  .results-header {
    text-align: center;
    margin-bottom: 72px;
  }

  .results-header .section-label::before {
    display: none;
  }

  .results-header .section-subtitle {
    margin: 0 auto;
  }

  .results-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 28px;
    margin-bottom: 72px;
  }

  .result-card {
    border-radius: 20px;
    overflow: hidden;
    border: 1px solid var(--color-gray-border);
    transition: all 0.4s var(--ease-out-expo);
    background: var(--color-white);
  }

  .result-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.08);
  }

  .result-image-container {
    position: relative;
    overflow: hidden;
  }

  .result-slider {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    aspect-ratio: 2/1;
  }

  .result-img-wrap {
    position: relative;
    overflow: hidden;
  }

  .result-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .result-label {
    position: absolute;
    top: 12px;
    left: 12px;
    padding: 4px 12px;
    background: rgba(15, 23, 42, 0.7);
    backdrop-filter: blur(10px);
    color: white;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: 6px;
    z-index: 2;
  }

  .result-label-after {
    left: auto;
    right: 12px;
    background: rgba(37, 99, 235, 0.8);
  }

  .slider-divider {
    width: 3px;
    background: var(--color-white);
    position: relative;
    z-index: 3;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .slider-handle {
    width: 32px;
    height: 32px;
    background: var(--color-white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    position: absolute;
  }

  .slider-handle svg {
    width: 16px;
    height: 16px;
    color: var(--color-black);
  }

  .result-info {
    padding: 20px 24px;
  }

  .result-category {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-blue);
  }

  .result-title {
    font-size: 1.1rem;
    color: var(--color-black);
    margin-top: 4px;
    letter-spacing: -0.01em;
  }

  .results-cta {
    background: linear-gradient(135deg, var(--color-blue) 0%, var(--color-blue-dark) 100%);
    border-radius: 24px;
    padding: 56px 64px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
    position: relative;
    overflow: hidden;
  }

  .results-cta::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    pointer-events: none;
  }

  .results-cta h3 {
    font-size: 1.6rem;
    color: var(--color-white);
    margin-bottom: 8px;
  }

  .results-cta p {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1rem;
  }

  @media (max-width: 1024px) {
    .results-grid {
      grid-template-columns: 1fr;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }
  }

  @media (max-width: 640px) {
    .results-cta {
      flex-direction: column;
      text-align: center;
      padding: 40px 32px;
    }
  }
</style>
