<section class="hero" id="hero">
  <div class="hero-grid" aria-hidden="true">
    <div class="grid-line grid-line-1"></div>
    <div class="grid-line grid-line-2"></div>
    <div class="grid-line grid-line-3"></div>
    <div class="grid-line grid-line-v1"></div>
    <div class="grid-line grid-line-v2"></div>
  </div>
  <div class="hero-glow" aria-hidden="true"></div>

  <div class="hero-inner container">
    <div class="hero-content">
      <div class="hero-badge reveal">
        <span class="badge-dot"></span>
        Now Accepting New Patients
      </div>

      <h1 class="hero-title reveal reveal-delay-1">
        Your Perfect<br />
        Smile Starts<br />
        <span class="hero-title-accent">Here.</span>
      </h1>

      <p class="hero-desc reveal reveal-delay-2">
        World-class dental care powered by cutting-edge technology.
        Dr. Valton Rrustemi and his team deliver precision treatments
        for results that speak for themselves.
      </p>

      <div class="hero-actions reveal reveal-delay-3">
        <a href="#contact" class="btn btn-primary">
          Book Consultation
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
        </a>
        <a href="#services" class="btn btn-outline">
          Our Services
        </a>
      </div>

      <div class="hero-stats reveal reveal-delay-4">
        <div class="stat">
          <span class="stat-number">15+</span>
          <span class="stat-label">Years Experience</span>
        </div>
        <div class="stat-divider"></div>
        <div class="stat">
          <span class="stat-number">10K+</span>
          <span class="stat-label">Happy Patients</span>
        </div>
        <div class="stat-divider"></div>
        <div class="stat">
          <span class="stat-number">98%</span>
          <span class="stat-label">Success Rate</span>
        </div>
      </div>
    </div>

    <div class="hero-visual reveal reveal-delay-2">
      <div class="hero-image-wrapper">
        <picture>
          <source media="(max-width: 768px)" srcset="/images/hero-mobile.jpg" />
          <img src="/images/hero-destok.jpg" alt="Doctor Smile modern dental clinic with cutting-edge equipment" class="hero-img" loading="eager" />
        </picture>
        <div class="hero-float-card">
          <div class="float-card-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          </div>
          <div>
            <div class="float-card-title">Verified Clinic</div>
            <div class="float-card-sub">33K+ followers trust us</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="scroll-indicator reveal reveal-delay-5">
    <div class="scroll-line"></div>
    <span>Scroll</span>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 140px 0 100px;
    overflow: hidden;
  }

  .hero-grid {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .grid-line {
    position: absolute;
    background: var(--color-gray-border);
    opacity: 0.4;
  }

  .grid-line-1 { top: 25%; left: 0; right: 0; height: 1px; }
  .grid-line-2 { top: 50%; left: 0; right: 0; height: 1px; }
  .grid-line-3 { top: 75%; left: 0; right: 0; height: 1px; }
  .grid-line-v1 { top: 0; bottom: 0; left: 33%; width: 1px; }
  .grid-line-v2 { top: 0; bottom: 0; left: 66%; width: 1px; }

  .hero-glow {
    position: absolute;
    top: -200px;
    right: -200px;
    width: 700px;
    height: 700px;
    background: radial-gradient(circle, rgba(37, 99, 235, 0.08) 0%, transparent 70%);
    pointer-events: none;
  }

  .hero-inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    position: relative;
    z-index: 2;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 8px 18px 8px 12px;
    background: var(--color-blue-subtle);
    border: 1px solid rgba(37, 99, 235, 0.1);
    border-radius: 100px;
    font-size: 0.82rem;
    font-weight: 600;
    color: var(--color-blue);
    margin-bottom: 32px;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: var(--color-blue);
    border-radius: 50%;
    animation: pulse-dot 2s ease-in-out infinite;
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(0.8); }
  }

  .hero-title {
    margin-bottom: 28px;
    color: var(--color-black);
  }

  .hero-title-accent {
    color: var(--color-blue);
    position: relative;
  }

  .hero-title-accent::after {
    content: '';
    position: absolute;
    bottom: 4px;
    left: 0;
    right: 0;
    height: 6px;
    background: rgba(37, 99, 235, 0.15);
    border-radius: 3px;
  }

  .hero-desc {
    font-size: 1.12rem;
    max-width: 480px;
    margin-bottom: 40px;
    line-height: 1.8;
  }

  .hero-actions {
    display: flex;
    gap: 16px;
    margin-bottom: 60px;
    flex-wrap: wrap;
  }

  .hero-stats {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .stat-number {
    display: block;
    font-size: 1.8rem;
    font-weight: 800;
    color: var(--color-black);
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .stat-label {
    font-size: 0.8rem;
    color: var(--color-gray);
    font-weight: 500;
  }

  .stat-divider {
    width: 1px;
    height: 40px;
    background: var(--color-gray-border);
  }

  .hero-visual {
    position: relative;
  }

  .hero-image-wrapper {
    position: relative;
  }

  .hero-img {
    width: 100%;
    aspect-ratio: 4/3;
    border-radius: 20px;
    border: 1px solid var(--color-gray-border);
    object-fit: cover;
  }

  .hero-float-card {
    position: absolute;
    bottom: -20px;
    left: -30px;
    display: flex;
    align-items: center;
    gap: 14px;
    padding: 18px 24px;
    background: var(--color-white);
    border-radius: 16px;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.08), 0 0 0 1px rgba(226, 232, 240, 0.5);
    animation: float 4s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  .float-card-icon {
    width: 44px;
    height: 44px;
    border-radius: 12px;
    background: var(--color-blue-subtle);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .float-card-icon svg {
    width: 22px;
    height: 22px;
    color: var(--color-blue);
  }

  .float-card-title {
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--color-black);
  }

  .float-card-sub {
    font-size: 0.78rem;
    color: var(--color-gray);
  }

  .scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, var(--color-blue), transparent);
    animation: scroll-pulse 2s ease-in-out infinite;
  }

  @keyframes scroll-pulse {
    0%, 100% { opacity: 1; height: 40px; }
    50% { opacity: 0.3; height: 30px; }
  }

  .scroll-indicator span {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-gray-light);
  }

  @media (max-width: 900px) {
    .hero {
      padding: 120px 0 80px;
    }

    .hero-inner {
      grid-template-columns: 1fr;
      gap: 50px;
      text-align: center;
    }

    .hero-desc {
      margin-left: auto;
      margin-right: auto;
    }

    .hero-actions {
      justify-content: center;
    }

    .hero-stats {
      justify-content: center;
    }

    .hero-float-card {
      left: 50%;
      transform: translateX(-50%);
      bottom: -16px;
    }

    @keyframes float {
      0%, 100% { transform: translateX(-50%) translateY(0); }
      50% { transform: translateX(-50%) translateY(-8px); }
    }

    .scroll-indicator {
      display: none;
    }

    .grid-line-v1, .grid-line-v2 {
      display: none;
    }
  }
</style>
