---
const testimonials = [
  {
    name: "Sarah M.",
    role: "Veneer Patient",
    text: "I traveled from Germany specifically for Dr. Rrustemi's expertise. The results exceeded all my expectations. My new smile has completely transformed my confidence.",
    rating: 5
  },
  {
    name: "Arben K.",
    role: "Implant Patient",
    text: "After years of avoiding the dentist, I finally found a clinic that made me feel at ease. The team is incredibly professional, and the technology they use is impressive.",
    rating: 5
  },
  {
    name: "Elena D.",
    role: "Orthodontics Patient",
    text: "The invisible aligners worked perfectly. In just a few months, my teeth were completely aligned. The whole process was seamless and the follow-up care is outstanding.",
    rating: 5
  },
  {
    name: "Marco B.",
    role: "Whitening Patient",
    text: "One session was all it took. My teeth are several shades whiter and the results look completely natural. The clinic itself feels like a five-star hotel.",
    rating: 5
  },
];
---

<section class="testimonials" id="testimonials">
  <div class="container">
    <div class="testimonials-header">
      <span class="section-label reveal">Testimonials</span>
      <h2 class="section-title reveal reveal-delay-1">What Our Patients<br/>Are Saying</h2>
    </div>

    <div class="testimonials-grid">
      {testimonials.map((t, i) => (
        <div class={`testimonial-card reveal reveal-delay-${(i % 4) + 1}`}>
          <div class="testimonial-stars">
            {Array.from({length: t.rating}).map(() => (
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
            ))}
          </div>
          <p class="testimonial-text">"{t.text}"</p>
          <div class="testimonial-author">
            <div class="testimonial-avatar">
              {t.name.charAt(0)}
            </div>
            <div>
              <div class="testimonial-name">{t.name}</div>
              <div class="testimonial-role">{t.role}</div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="trust-bar reveal">
      <div class="trust-item">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
        <span>Verified Reviews</span>
      </div>
      <div class="trust-divider"></div>
      <div class="trust-item">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
        <span>10,000+ Happy Patients</span>
      </div>
      <div class="trust-divider"></div>
      <div class="trust-item">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
        <span>4.9/5 Average Rating</span>
      </div>
      <div class="trust-divider"></div>
      <div class="trust-item">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
        <span>33K+ Instagram Followers</span>
      </div>
    </div>
  </div>
</section>

<style>
  /* ── Base (mobile) ── */
  .testimonials {
    padding: var(--section-padding) 0;
    background: var(--color-black);
    position: relative;
    overflow: hidden;
  }

  .testimonials::before {
    content: '';
    position: absolute;
    top: -300px;
    left: -200px;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(37, 99, 235, 0.08) 0%, transparent 70%);
    pointer-events: none;
  }

  .testimonials .section-label {
    color: var(--color-blue-light);
  }

  .testimonials .section-label::before {
    background: var(--color-blue-light);
  }

  .testimonials .section-title {
    color: var(--color-white);
  }

  .testimonials-header {
    margin-bottom: 40px;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 16px;
    margin-bottom: 40px;
  }

  .testimonial-card {
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    padding: 28px;
    transition: all 0.4s var(--ease-out-expo);
  }

  .testimonial-card:hover {
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(37, 99, 235, 0.3);
    transform: translateY(-2px);
  }

  .testimonial-stars {
    display: flex;
    gap: 3px;
    margin-bottom: 16px;
  }

  .testimonial-stars svg {
    width: 14px;
    height: 14px;
    color: #FBBF24;
  }

  .testimonial-text {
    font-size: 0.92rem;
    color: rgba(255, 255, 255, 0.75);
    line-height: 1.7;
    margin-bottom: 20px;
    font-style: italic;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .testimonial-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-blue);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 0.9rem;
  }

  .testimonial-name {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-white);
  }

  .testimonial-role {
    font-size: 0.75rem;
    color: var(--color-gray);
  }

  /* Trust bar */
  .trust-bar {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    padding: 28px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 12px;
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .trust-item svg {
    width: 18px;
    height: 18px;
    color: var(--color-blue-light);
  }

  .trust-item span {
    font-size: 0.8rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
  }

  .trust-divider {
    display: none;
  }

  /* ── Tablet (md) ── */
  @media (min-width: 768px) {
    .testimonials-header {
      margin-bottom: 64px;
    }

    .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 24px;
      margin-bottom: 64px;
    }

    .testimonial-card {
      border-radius: 20px;
      padding: 36px;
    }

    .testimonial-stars svg {
      width: 16px;
      height: 16px;
    }

    .testimonial-stars {
      margin-bottom: 20px;
    }

    .testimonial-text {
      font-size: 1.02rem;
      line-height: 1.75;
      margin-bottom: 24px;
    }

    .testimonial-author {
      gap: 14px;
    }

    .testimonial-avatar {
      width: 44px;
      height: 44px;
      font-size: 1rem;
    }

    .testimonial-name {
      font-size: 0.95rem;
    }

    .testimonial-role {
      font-size: 0.8rem;
    }

    .trust-bar {
      flex-direction: row;
      justify-content: center;
      flex-wrap: wrap;
      gap: 24px;
      padding: 32px;
      border-radius: 16px;
    }

    .trust-divider {
      display: block;
      width: 1px;
      height: 20px;
      background: rgba(255, 255, 255, 0.1);
    }

    .trust-item svg {
      width: 20px;
      height: 20px;
    }

    .trust-item span {
      font-size: 0.85rem;
    }

    .trust-item {
      gap: 10px;
    }
  }

  /* ── Desktop (lg) ── */
  @media (min-width: 1024px) {
    .trust-bar {
      gap: 32px;
    }
  }
</style>
